<div class="container">

<p id="notice"><%= notice %></p>

<p>
   <% if @book.image.exists? %>
        <%= link_to (image_tag @book.image.url(:thumb), class: 'img-responsive img-thumbnail') %>
      <% else %>
        <%= image_tag 'default_avatar.jpg', class: 'img-circle img-thumbnail', width: '100' %>
    <% end %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <%= link_to 'More Information', @book.webpage %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>

</div>