<div class="container-fluid">
<h1>Useful Books</h1>

    <% @books.each do |book| %>
    <div class="row-fluid">
      <div class="col-md-2">
        <% if book.image.exists? %>
           <%= link_to (image_tag book.image.url(:thumb), class: 'img-responsive img-thumbnail') %>
            <% else %>
            <%= image_tag 'default_avatar.jpg', class: 'img-circle img-thumbnail', width: '100' %>
        <% end %>
      </div>

      <div class="col-md-4">
        <%= book.title %>
      </div>

      <div class="col-md-4">
        <%= book.description %>
      </div>

      <%= link_to 'Show', book %>
      <% if user_signed_in? %>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  </div>
</div>
<br>
<% if user_signed_in? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
</div>