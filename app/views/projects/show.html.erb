<div class="container">

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
   <% if @project.image.exists? %>
        <%= link_to (image_tag @project.image.url(:medium), class: 'img-responsive img-thumbnail') %>
    <% end %>
</p>

<p>
  <%= link_to 'More Information', @project.webpage %>
</p>

<% if user_signed_in? %>
    <%= link_to 'Edit Project', edit_project_path(@project) %>
<% end %>

<%= link_to 'Back', projects_path %>

</div>