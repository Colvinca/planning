<%= form_for([@project, @project.improvements.build]) do |f| %>

 <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :principle %><br />
    <%= f.text_field :principle %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => "80", :rows => "10" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
